// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Participant {
  id        String   @id @default(uuid())
  fullName  String
  email     String?  @unique
  phone     String?  @unique
  code      String   @unique
  redeemed  Boolean  @default(false)
  createdAt DateTime @default(now())
  redeemedAt DateTime?
}
